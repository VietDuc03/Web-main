{% extends 'base.html.twig' %}

{% block body %}
    <div style="transform: translateX(-120px);"; class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
        <style>
        table, th, td {border: 3px solid red; text-align: center;}
        body{
        background-image: url("../images/images1.jpg");
    }
        </style>
            <thead>
            <tr>
                <th>ID</th>
                <th>Type</th>
                <th>Select</th>   
            </tr>
            </thead>
            <tbody>
            {% for c in category %}
                <tr>
                    <th scope="row">{{ c.id }}</th>
                    <td>{{ c.type }}</td>
                    
                    <td>
                        <a href="{{ path('views_category', {'id': c.id}) }}" class='btn btn-primary'>View</a> 
                        <a href="{{ path('edit_category', {'id': c.id}) }}" class='btn btn-success'>Edit</a>
                        <a href="{{ path('delete_category', {'id': c.id}) }}" class='btn btn-danger'>Delete</a>
                        
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
