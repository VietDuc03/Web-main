{% extends 'base.html.twig' %}

{% block body %}
    <div style="transform: translateX(-120px);"; class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
        <style>
        table, th, td {border: 3px solid red; text-align:center;}
        </style>
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>                
                <th>Price</th>
                <th>Quantity</th>
                <th>Category</th>
                <th>Select</th>
            </tr>
            </thead>
            <tbody>
            {% for b in books %}
                <tr>
                    <th scope="row">{{ b.id }}</th>
                    <td>{{ b.name }}</td>
                    <td>{{ b.price }}</td>
                    <td>{{ b.quantity }}</td>
                     <td>{{ b.category }}</td>
                    <td>
                        {#<a href="{{ path('b_details', {'id': b.id}) }} " class='btn btn-primary'>View</a>#}
                        {#<a href="{{ path('b_edit', {'id': b.id}) }}" class='btn btn-success'>Edit</a>#}
                        {#<a href="{{ path('b_delete', {'id': b.id}) }}" class='btn btn-danger'>Delete</a>#}
                        <a href="{{ path('book_views', {'id': b.id}) }} " class='btn btn-primary'>View</a> 
                        <a href="{{ path('book_edit', {'id': b.id}) }}" class='btn btn-success'>Edit</a>
                        <a href="{{ path('book_delete', {'id': b.id}) }} " class='btn btn-danger'>Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
