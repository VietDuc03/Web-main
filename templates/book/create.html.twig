{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}

    <style>
    body {
        background-image: url("../images/images1.jpg");
    }
    label {
        color: white;
    }
    </style>
    
    <div class="form-group">
        <h2><label for="name">Name:</label></h2>
        {{ form_widget(form.name,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Book title:'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.name) }}
        </div>
    </div>
    </div>
    <div class="form-group">
        <h2><label for="price">Price:</label></h2>
        {{ form_widget(form.price,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Price:'
            }
        }) }}
    </div>
    <div class="form-group">
        <h2><label for="quantity">Quantity:</label></h2>
        {{ form_widget(form.quantity,{
            'attr':{
                'class':'form-control'
            }
        }) }}
        
    </div>
    
    <div class="form-group">
        <h2><label for="category">Category:</label></h2>
        {{ form_widget(form.category,{
            'attr':{
                'class':'form-control'
            }
        }) }}
        
    </div>
    <input type="submit" name="create_book" value="Create" class="btn btn-info"/>
    {{ form_end(form) }}
{% endblock %}
